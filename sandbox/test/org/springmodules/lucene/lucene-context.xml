<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <bean id="directory" class="org.springmodules.lucene.RAMDirectoryBean"/>

<!--    <bean id="directory" class="org.springmodules.lucene.FSDirectoryBean">-->
<!--        <property name="location"><value>/tmp</value></property>-->
<!--    </bean>-->

    <bean id="analyzer" class="org.apache.lucene.analysis.standard.StandardAnalyzer"/>

    <bean id="lucene" class="org.springmodules.lucene.LuceneTemplate">
        <property name="directory"><ref bean="directory"/></property>
        <property name="analyzer"><ref bean="analyzer"/></property>
    </bean>

    <!-- For more fine-grained stuff than Template provides -->
    <bean id="reader" class="org.springmodules.lucene.IndexReaderBean">
        <property name="directory"><ref bean="directory"/></property>
    </bean>

    <bean id="writer" class="org.springmodules.lucene.IndexWriterBean">
        <property name="directory"><ref bean="directory" /></property>
        <property name="analyzer"><ref bean="analyzer"/></property>
    </bean>
</beans>