<ivy-module version="1.1">
  <info organisation="springmodules" module="springmodules-sandbox-valang"/>

  <configurations>
    <!-- default configuration that 'by default' pulls in the global configuration -->
    <conf name="default" extends="global" />

    <!-- core dependencies needed at compile-time, test-time, and runtime -->
    <conf name="global" visibility="private" />

    <!-- additional dependencies needed only at build-time -->
    <conf name="buildtime" visibility="private" />

    <!-- additional dependencies needed only at test-time -->
    <conf name="test" visibility="private" />

  </configurations>

  <dependencies defaultconf="global->default">
    <!-- global (compile, test, runtime) dependencies -->
    <dependency org="apache" name="commons-logging" rev="1.0.4" />
    <dependency org="apache" name="log4j" rev="1.2.13" />
    <dependency org="springframework" name="springframework" rev="1.2.7"
      conf="global,test->default">
      <artifact name="spring" type="jar" conf="global" />
      <artifact name="spring-mock" type="jar" conf="test" />
    </dependency>

    <dependency org="apache" name="commons-lang" rev="2.1" conf="test->default" />
    <dependency org="apache" name="commons-collections" rev="3.1" />
    
    <dependency org="springmodules" name="springmodules-sandbox-util" rev="latest.integration"/>
    <!--
	<dependency org="springmodules" name="springmodules-sandbox-beans" rev="latest.integration" conf="buildtime->default"/>    
	-->
    
    <dependency org="sun" name="javax.servlet" rev="2.3">
		<artifact name="servlet-api" type="jar"/> 		
	</dependency>
	  
	 <dependency org="mozilla" name="rhino" rev="1.6+">
		<artifact name="js" type="jar"/>
	 </dependency>
	 
	 
    <!-- test time only dependencies -->
    <dependency org="clover" name="clover" rev="1.3.9"
      conf="test->default" />
    <dependency org="easymock" name="easymock" rev="1.1"
      conf="test->default">
      <!--
      <artifact name="easymockclassextension" type="jar" conf="test" />
      -->
    </dependency>
    <!--
    <dependency org="cglib" name="cglib" rev="2.1_3" conf="test->default">
    	<artifact name="cglib-nodep" type="jar" conf="test"/>
    </dependency>
    -->
    <dependency org="junit" name="junit" rev="3.8.1"
      conf="test->default" />
  </dependencies>
</ivy-module>
