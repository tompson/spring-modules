<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app PUBLIC
	"-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>osworkflow</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>osworkflow</servlet-name>
		<url-pattern>/approval/*</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>workflow</filter-name>
		<filter-class>org.springmodules.workflow.osworkflow.support.WorkflowContextFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>workflow</filter-name>
		<servlet-name>osworkflow</servlet-name>
	</filter-mapping>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Approval Workflow</web-resource-name>
			<url-pattern>/approval/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>manager</role-name>
		</auth-constraint>
	</security-constraint>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>OSWorkflow Sample</realm-name>
		<form-login-config>
			<form-login-page>/login.jsp</form-login-page>
			<form-error-page>/error.jsp</form-error-page>
		</form-login-config>
	</login-config>

	<security-role>
		<description>
			The role that is required to log in to the OSWorkflow Sample Application
		</description>
		<role-name>manager</role-name>
	</security-role>


</web-app>