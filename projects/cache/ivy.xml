<ivy-module version="1.1">

  <info organisation="springmodules" module="cache" />

  <configurations>
    <!-- default configuration that 'by default' pulls in the global configuration -->
    <conf name="default" extends="global" />

    <!-- core dependencies needed at compile-time, test-time, and runtime -->
    <conf name="global" visibility="private" />

    <!-- additional dependencies needed only at build-time -->
    <conf name="buildtime" visibility="private" />

    <!-- additional dependencies needed only at test-time -->
    <conf name="test" visibility="private" />
  </configurations>

  <dependencies defaultconf="global->default">
    <!-- global (compile, test, runtime) dependencies -->
    <dependency org="apache" name="commons-logging" rev="1.0.4" />

    <dependency org="apache" name="log4j" rev="1.2.9" />

    <dependency org="springframework" name="org.springframework"
      rev="2.0-m3" conf="global,test->default">
      <artifact name="spring-aop" type="jar" conf="global" />
      <artifact name="spring-aspects" type="jar" conf="global" />
      <artifact name="spring-beans" type="jar" conf="global" />
      <artifact name="spring-context" type="jar" conf="global" />
      <artifact name="spring-core" type="jar" conf="global" />
      <artifact name="spring-support" type="jar" conf="global" />
      <artifact name="spring-mock" type="jar" conf="test" />
    </dependency>

    <!-- cache dependencies
      <dependency org="coherence" name="coherence" rev="3.10b321">
      <artifact name="coherence" type="jar" conf="global" />
      <artifact name="tangosol" type="jar" conf="global" />
      </dependency>
    -->

    <dependency org="apache" name="commons-attributes" rev="2.1">
      <artifact name="commons-attributes-api" type="jar" />
      <artifact name="commons-attributes-compiler" type="jar" />
    </dependency>

    <dependency org="apache" name="commons-lang" rev="2.1" />

    <dependency org="apache" name="commons-collections" rev="3.1" />

    <dependency org="concurrent" name="concurrent" rev="1.3.4" />

    <dependency org="cglib" name="cglib" rev="2.1_3">
      <artifact name="cglib-nodep" type="jar" />
    </dependency>

    <dependency org="ehcache" name="ehcache" rev="1.1" />

    <dependency org="jboss" name="javassist" rev="3.0" />

    <!-- TODO: fix this -->
    <dependency org="jboss" name="jboss-cache" rev="1.2.4">
      <artifact name="jboss-cache" type="jar" />
    </dependency>

    <dependency org="jboss" name="jboss" rev="4.0.3">
      <artifact name="jboss-common" type="jar" />
      <artifact name="jboss-jmx" type="jar" />
      <artifact name="jboss-minimal" type="jar" />
      <artifact name="jboss-system" type="jar" />
    </dependency>

    <dependency org="jcs" name="jcs" rev="1.2.6.5" />

    <dependency org="jgroups" name="jgroups" rev="2.2.8">
      <artifact name="jgroups-all" type="jar" />
    </dependency>

    <!-- use geronimo instead
      <dependency org="jta" name="jta" rev="1.0.1" />
    -->
    <dependency org="geronimo-spec" name="geronimo-spec"
      rev="1.0.1B-rc4">
      <artifact type="jar" name="geronimo-spec-jta" />
    </dependency>

    <dependency org="opensymphony" name="opensymphony" rev="2.1.1">
      <artifact name="oscache" type="jar" />
    </dependency>

    <dependency org="apache" name="oro" rev="2.0.8" />

    <dependency org="xpp3" name="xpp3" rev="1.1.3.4.I">
      <artifact name="xpp3_min" type="jar" />
    </dependency>

    <dependency org="xjavadoc" name="xjavadoc" rev="1.1" />

    <dependency org="xstream" name="xstream" rev="1.1.2" />

    <!-- test time only dependencies -->
    <dependency org="clover" name="clover" rev="1.3.9"
      conf="test->default" />

    <dependency org="easymock" name="easymock" rev="1.1"
      conf="test->default">
      <artifact name="easymock" type="jar" conf="test" />
      <artifact name="easymockclassextension" type="jar" conf="test" />
    </dependency>

    <dependency org="junit" name="junit" rev="3.8.1"
      conf="test->default" />
  </dependencies>
</ivy-module>
