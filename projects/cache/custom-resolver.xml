<ivyconf>
  <resolvers>
    <chain name="custom">
      <!-- some sf repository which contains JBoss jars -->
      <ibiblio name="moria-maven"
        root="http://moria.sourceforge.net/maven/"
        pattern="[module]/[type]s/[artifact]-[revision].[ext]" />
      <url name="jboss-cache-moria">
        <!-- url pattern for moria maven | used to maintain the correct naming system -->
        <artifact
          pattern="http://moria.sourceforge.net/maven/jboss/[type]s/[artifact]-[revision].[ext]" />
      </url>
      <url name="jboss-ibiblio">
        <!-- url pattern for jcs svn repository -->
        <artifact
          pattern="http://mirrors.ibiblio.org/pub/mirrors/maven2/jboss/[artifact]/[revision]/[artifact]-[revision].[ext]" />
      </url>
      <!-- jcs official url -->
      <url name="jcs">
        <!-- url pattern for jcs svn repository -->
        <artifact
          pattern="http://mirrors.ibiblio.org/pub/mirrors/maven2/org/apache/jcs/jcs/[revision]/[artifact]-[revision].[ext]" />
      </url>
      <!-- xpp3_min official url -->
      <url name="xpp3">
        <!-- url pattern for jcs svn repository -->
        <artifact
          pattern="http://www.extreme.indiana.edu/dist/java-repository/xpp3/jars/[artifact]-[revision].[ext]" />
      </url>
      <!-- ehcache url -->
      <url name="ehcache">
        <!-- url pattern for ehcache repository -->
        <artifact
          pattern="http://www.ibiblio.org/maven2/net/sf/ehcache/ehcache/[revision]/[artifact]-[revision].[ext]" />
      </url>
      <!-- xstream url -->
      <url name="xstream">
        <!-- url pattern for xstream repository -->
        <artifact
          pattern="http://www.ibiblio.org/maven2/com/thoughtworks/xstream/xstream/[revision]/[artifact]-[revision].[ext]" />
      </url>
    </chain>
  </resolvers>
</ivyconf>