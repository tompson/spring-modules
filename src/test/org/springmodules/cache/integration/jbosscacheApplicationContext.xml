<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd"
>

<beans>
  <!-- Cache Manager -->
  <bean id="cacheManager"
    class="org.springmodules.cache.provider.jboss.JbossCacheManagerFactoryBean">
  </bean>

  <!-- Cache Provider -->
  <bean id="cacheProvider"
    class="org.springmodules.cache.provider.jboss.JbossCacheFacade">
    <property name="cacheManager" ref="cacheManager" />
    <property name="cacheModels">
      <props>
        <prop key="test">[nodeFqn=a/b/c]</prop>
      </props>
    </property>
  </bean>
</beans>